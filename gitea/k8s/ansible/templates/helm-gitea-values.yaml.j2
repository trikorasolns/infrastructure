image:
  tag: "{{ app_version }}"

ingress:
  enabled: true
  className: "nginx"
  annotations: {}
  hosts:
    - host: "{{ app_name }}.{{ local_domain }}"
      paths:
        - path: /
          pathType: Prefix
          backend:
            serviceName: http
            servicePort: 3000

database:
  name: gitea
  user: gitea
  password: {{ db_password }}
  host: postgresql.{{ app_name }}.svc.cluster.local
