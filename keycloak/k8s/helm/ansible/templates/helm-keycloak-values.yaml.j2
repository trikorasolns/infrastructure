image:
  tag: "{{ app_version }}"

ingress:
  enabled: true
  className: "nginx"
  annotations: {}
  hosts:
    - host: "{{ app_name }}.{{ local_domain }}"
      paths:
        - path: /
          pathType: Prefix
          backend:
            serviceName: http
            servicePort: 8080

persistence:
  dbType: {{ db_type }}
  dbPort: {{ db_port }}
  dbName: {{ db_name }}
  dbUser: {{ db_user }}}
  dbPassword: {{ db_password }}
