image:
  tag: "{{ app_version | default('16.0') }}"

ingress:
  enabled: true
  className: "nginx"
  annotations: {}
  hosts:
    - host: "{{ app_name }}.trikorasolutions.net"
      paths:
        - path: /
          pathType: Prefix
          backend:
            serviceName: http
            servicePort: 8069

database:
  name: postgres
  user: odoo
  password: {{ db_password }}
  host: postgresql.{{ app_name }}.svc.cluster.local
